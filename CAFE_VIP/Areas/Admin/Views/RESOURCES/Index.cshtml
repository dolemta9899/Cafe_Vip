@model IEnumerable<Models.EF.RESOURCE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />
    <div class="card-header">
        <a class="addnv card-title ">@Html.ActionLink("Add Resources", "Create")</a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead class=" text-primary">

                <th>
                    @Html.DisplayNameFor(model => model.Resourcesname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th>
                    EDIT
                </th>
                <th>
                    DELETE
                </th>
                <th>
                    DETAILS
                </th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Resourcesname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>
                        <td>
                            <button class="btn btn-outline-primary btn-sm">@Html.ActionLink("Edit", "Edit", new { id = item.ResourcesID }) </button>
                        </td>
                        <td>
                            <button class="btn btn-outline-primary btn-sm">@Html.ActionLink("Details", "Details", new { id = item.ResourcesID })</button>
                        </td>
                        <td>
                            <button class="btn btn-outline-primary btn-sm"> @Html.ActionLink("Delete", "Delete", new { id = item.ResourcesID }) </button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

